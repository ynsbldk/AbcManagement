@model AbcManagement.Website.Models.ProjectModel

<div class="row">
    <div class="col-sm-12">
        <!-- Basic Form Inputs card start -->
        <div class="card">
            <div class="card-header">              

            </div>
            <div class="card-block">
                <h4 class="sub-title">Create Project</h4>
                <form asp-antiforgery="true">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Project Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="ProjectName">
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Progress</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Progress">
                            <span asp-validation-for="Progress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Category</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="CategoryId">
                        </div>
                    </div>                    
                    <div class="form-group row">
                        <label class="col-sm-8 col-form-label"></label>
                        <div class="col-sm-4">
                            <input type="submit" class="form-control" value="Submit">
                        </div>
                    </div>

                </form>         
            </div>
        </div>
    
   
   
    </div>
</div>