@model AbcManagement.Website.Models.CategoryModel

<div class="row">
    <div class="col-sm-12">
        <!-- Basic Form Inputs card start -->
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-block">
                <h4 class="sub-title">Create Category</h4>
                <form asp-antiforgery="true">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Category Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="CategoryName">
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Project</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Project.Id, new SelectList(ViewBag.project, "Id", "ProjectName"), new { @class = "js-example-basic-single", id = "persid" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-8 col-form-label"></label>
                        <div class="col-sm-4">
                            <input type="submit" class="form-control" value="Submit">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

